# ======================================
# Kafka Connect / Debezium Configuration
# ======================================

# --- Kafka Broker Configuration ---
KAFKA_BROKER_PORT=9092                               # Kafka broker port exposed by the Kafka container
BOOTSTRAP_SERVERS=broker:9092                        # Kafka bootstrap servers used by Connect to read/write messages

# --- Kafka Connect REST API ---
REST_API_PORT=8083                                   # Port exposed by Kafka Connect REST API for managing connectors
REST_ADVERTISED_HOST_NAME=debezium                   # Hostname advertised by Connect REST API to other services

# --- Kafka Connect Group ID ---
GROUP_ID=debezium_group                              # Consumer group ID used internally by Kafka Connect

# --- Kafka Connect Internal Topics ---
CONFIG_STORAGE_TOPIC=connect-configs                 # Topic for storing connector configurations
OFFSET_STORAGE_TOPIC=connect-offsets                 # Topic for tracking source offsets per connector
STATUS_STORAGE_TOPIC=connect-statuses                # Topic for storing connector and task statuses

# --- Message Format Converters ---
KEY_CONVERTER=org.apache.kafka.connect.json.JsonConverter                  # Converter for message keys (JSON without schema)
VALUE_CONVERTER=org.apache.kafka.connect.json.JsonConverter                # Converter for message values (JSON without schema)
KEY_CONVERTER_SCHEMAS_ENABLE=false                                         # Disable schema in keys (recommended for schema-less messages)
VALUE_CONVERTER_SCHEMAS_ENABLE=false                                       # Disable schema in values

# --- Internal Converters (Kafka Connect internal data formats) ---
INTERNAL_KEY_CONVERTER=org.apache.kafka.connect.json.JsonConverter         # Converter for internal keys
INTERNAL_VALUE_CONVERTER=org.apache.kafka.connect.json.JsonConverter       # Converter for internal values

# --- JVM and Memory Settings ---
HEAP_OPTS="-Xms512M -Xmx2G"                        # Java heap size: initial 512MB, max 2GB (adjust to workload)

# --- JMX Monitoring (Optional) ---
JMX_PORT=8778                                      # Port for Java JMX monitoring (e.g., via JConsole)
ENABLE_JMX=true                                    # Enable JMX monitoring support (true/false)

# --- Plugin Path ---
PLUGIN_PATH=/kafka/connect,/debezium-plugins       # Paths where Kafka Connect looks for connector plugins
                                                   # /kafka/connect = default plugins bundled with Connect
                                                   # /debezium-plugins = additional mounted plugins (e.g., Debezium connectors)
